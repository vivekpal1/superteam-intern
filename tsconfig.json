{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "allowJs": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "types": ["node"],
    "typeRoots": ["./node_modules/@types", "./src/__tests__/types"]
  },
  "include": [
    "src/**/*",
    "src/__tests__/types/*.d.ts"
  ],
  "exclude": ["node_modules", "dist"]
}